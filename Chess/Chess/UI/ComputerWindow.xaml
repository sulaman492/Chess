<Window x:Class="Chess.UI.ComputerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Play vs Computer"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#2B1810">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#3D2316" Offset="0"/>
                <GradientStop Color="#1A0F0A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Width="420"
                Padding="30"
                Background="#E8C39E" 
                CornerRadius="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#6D3D21"
                BorderThickness="4">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>

            <StackPanel>

                <TextBlock Text="Play vs Computer"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="#4A2916"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <TextBlock Text="Choose Color"
                           Foreground="#6D3D21"
                           FontWeight="SemiBold"
                           FontSize="16"
                           Margin="0,10,0,5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton x:Name="WhiteRadio"
                                 Content="White"
                                 IsChecked="True"
                                 Margin="10"
                                 FontSize="15"
                                 Foreground="#2B1810"/>

                    <RadioButton x:Name="BlackRadio"
                                 Content="Black"
                                 Margin="10"
                                 FontSize="15"
                                 Foreground="#2B1810"/>
                </StackPanel>

                <TextBlock Text="Time Control"
                           Foreground="#6D3D21"
                           FontWeight="SemiBold"
                           FontSize="16"
                           Margin="0,15,0,5"/>

                <ComboBox x:Name="TimeControlCombo"
                          Height="35"
                          Background="White"
                          Foreground="Black"
                          SelectedIndex="0">
                    <ComboBoxItem Content="No Timer"/>
                    <ComboBoxItem Content="5 Minutes"/>
                    <ComboBoxItem Content="10 Minutes"/>
                    <ComboBoxItem Content="15 Minutes"/>
                </ComboBox>

                <TextBlock Text="Difficulty"
                           Foreground="#6D3D21"
                           FontWeight="SemiBold"
                           FontSize="16"
                           Margin="0,15,0,5"/>

                <ComboBox x:Name="DifficultyCombo"
                          Height="35"
                          Background="White"
                          Foreground="Black"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Easy"/>
                    <ComboBoxItem Content="Medium"/>
                    <ComboBoxItem Content="Hard"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0">

                    <Button Content="Back"
                            Width="120"
                            Height="40"
                            Margin="10"
                            Cursor="Hand"
                            Background="#D2B48C"
                            Foreground="#4A2916"
                            BorderBrush="#6D3D21"
                            Click="Back_Click"/>

                    <Button Content="Start Game"
                            Width="120"
                            Height="40"
                            Margin="10"
                            Cursor="Hand"
                            Background="#6D3D21"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="StartGame_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>