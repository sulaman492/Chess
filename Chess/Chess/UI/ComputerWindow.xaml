<Window x:Class="Chess.UI.ComputerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Play vs Computer"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid>
        <Border Width="420"
                Padding="30"
                Background="#252525"
                CornerRadius="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Play vs Computer"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Color Selection -->
                <TextBlock Text="Choose Color"
                           Foreground="White"
                           FontSize="16"
                           Margin="0,10,0,5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton x:Name="WhiteRadio"
                                 Content="White"
                                 IsChecked="True"
                                 Margin="10"
                                 Foreground="White"/>

                    <RadioButton x:Name="BlackRadio"
                                 Content="Black"
                                 Margin="10"
                                 Foreground="White"/>
                </StackPanel>

                <!-- Time Control -->
                <TextBlock Text="Time Control"
                           Foreground="White"
                           FontSize="16"
                           Margin="0,15,0,5"/>

                <ComboBox x:Name="TimeControlCombo"
                          Height="35"
                          Background="#333"
                          Foreground="White"
                          SelectedIndex="0">
                    <ComboBoxItem Content="No Timer"/>
                    <ComboBoxItem Content="5 Minutes"/>
                    <ComboBoxItem Content="10 Minutes"/>
                    <ComboBoxItem Content="15 Minutes"/>
                </ComboBox>

                <!-- Difficulty -->
                <TextBlock Text="Difficulty"
                           Foreground="White"
                           FontSize="16"
                           Margin="0,15,0,5"/>

                <ComboBox x:Name="DifficultyCombo"
                          Height="35"
                          Background="#333"
                          Foreground="White"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Easy"/>
                    <ComboBoxItem Content="Medium"/>
                    <ComboBoxItem Content="Hard"/>
                </ComboBox>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0">

                    <Button Content="Back"
                            Width="120"
                            Height="40"
                            Margin="10"
                            Click="Back_Click"/>

                    <Button Content="Start Game"
                            Width="120"
                            Height="40"
                            Margin="10"
                            Background="#4CAF50"
                            Foreground="White"
                            Click="StartGame_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
