<Window x:Class="Chess.UI.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        ResizeMode="NoResize">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- Title -->
            <TextBlock Text="CHESS"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Multiplayer -->
            <Button Content="Multiplayer"
                    Height="55"
                    FontSize="18"
                    Margin="0,10"
                    Background="#333333"
                    Foreground="White"
                    BorderBrush="White"
                    Click="Multiplayer_Click"/>

            <!-- Vs Computer -->
            <Button Content="Computer"
                    Height="55"
                    FontSize="18"
                    Margin="0,10"
                    Background="#333333"
                    Foreground="White"
                    BorderBrush="White"
                    Click="Computer_Click"/>

            <!-- Exit -->
            <Button Content="Exit"
                    Height="55"
                    FontSize="18"
                    Margin="0,10"
                    Background="#8B0000"
                    Foreground="White"
                    BorderBrush="White"
                    Click="Exit_Click"/>

        </StackPanel>
    </Grid>
</Window>
