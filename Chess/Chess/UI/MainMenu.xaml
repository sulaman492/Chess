 <Window x:Class="Chess.UI.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#2B1810"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6D3D21"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="#E8C39E" 
                                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#8B4513"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.7" RadiusY="0.7">
                <GradientStop Color="#4E342E" Offset="0"/>
                <GradientStop Color="#2B1810" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">

            <TextBlock Text="CHESS"
                       FontSize="64"
                       FontFamily="Georgia"
                       FontWeight="Bold"
                       Foreground="#E8C39E"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="4" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>

            <Button Content="Multiplayer"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="Multiplayer_Click"/>

            <Button Content="Computer"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="Computer_Click"/>

            <Button Content="Exit"
                    Style="{StaticResource MenuButtonStyle}"
                    Background="#4A2916"
                    Click="Exit_Click"/>

        </StackPanel>
    </Grid>
</Window>