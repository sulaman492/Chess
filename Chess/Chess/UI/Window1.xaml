<Window x:Class="Chess.UI.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.UI"
        mc:Ignorable="d"
        Title="Chess" Width="600" SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Background="#101010">
    <Viewbox>
        <Grid x:Name="BoardGrid" Height="600" Width="600">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/Board.png" Stretch="Fill"/>
            </Grid.Background>
            <UniformGrid x:Name="PieceGrid" Rows="8" Columns="8" RenderOptions.BitmapScalingMode="HighQuality">
                
            </UniformGrid>
        </Grid>
    </Viewbox>
</Window>
