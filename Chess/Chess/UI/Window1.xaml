<Window x:Class="Chess.UI.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess" Width="850" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="#FEFEFE">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <!-- Chessboard -->
            <ColumnDefinition Width="250"/>
            <!-- Right panel -->
        </Grid.ColumnDefinitions>

        <!-- Chessboard -->
        <Viewbox Grid.Column="0">
            <Grid x:Name="BoardGrid" Height="600" Width="600" MouseDown="BoardGrid_MouseDown">
                <Grid.Background>
                    <ImageBrush ImageSource="Assets/Board.png" Stretch="Fill"/>
                </Grid.Background>

                <UniformGrid x:Name="HighlightedGrid" Rows="8" Columns="8"/>
                <UniformGrid x:Name="PieceGrid" Rows="8" Columns="8" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Grid>
        </Viewbox>

        <!-- Right panel for Undo / Redo -->
        <Grid Grid.Column="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                <Button x:Name="UndoButton" Width="50" Height="50" Click="UndoButton_Click" Margin="5">
                    <Image Source="/UI/Assets/undo.png" Stretch="Uniform"/>
                </Button>

                <Button x:Name="RedoButton" Width="50" Height="50" Click="RedoButton_Click" Margin="5">
                    <Image Source="/UI/Assets/redo.png" Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
