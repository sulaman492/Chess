<Window x:Class="Chess.UI.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over"
        Width="400"
        Height="250"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        Topmost="True"
        AllowsTransparency="True">

    <Border CornerRadius="12"
            BorderBrush="#333"
            BorderThickness="2"
            Padding="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#D2A679" Offset="0.0"/>
                <GradientStop Color="#8B5E3C" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Game Over Title -->
            <TextBlock Text="Game Over!"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Winner Text -->
            <TextBlock x:Name="WinnerText"
                       Text="White Wins!"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Restart -->
                <Button x:Name="RestartButton"
                        Width="80"
                        Height="40"
                        Background="White"
                        BorderBrush="#333"
                        BorderThickness="2"
                        FontWeight="SemiBold"
                        Margin="5,0"
                        Click="RestartButton_Click">
                    Restart
                </Button>

                <!-- Review/Replay -->
                <Button x:Name="ReplayButton"
                        Width="80"
                        Height="40"
                        Background="White"
                        BorderBrush="#333"
                        BorderThickness="2"
                        FontWeight="SemiBold"
                        Margin="5,0"
                        Click="ReplayButton_Click">
                    Review
                </Button>

                <!-- Exit -->
                <Button x:Name="ExitButton"
                        Width="80"
                        Height="40"
                        Background="White"
                        BorderBrush="#333"
                        BorderThickness="2"
                        FontWeight="SemiBold"
                        Margin="5,0"
                        Click="ExitButton_Click">
                    Exit
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
